MONGODB_URI=your_mongodb_connection_string
JWT_SECRET=your_jwt_secret_key
PORT=3000

# For local development, BACKEND_URL is optional
# For Railway production, BACKEND_URL is REQUIRED
BACKEND_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Google OAuth Credentials
# Get these from: https://console.cloud.google.com/apis/credentials
# IMPORTANT: Add the callback URL to Google Console: ${BACKEND_URL}/auth/google/callback
# For Railway: https://your-backend.railway.app/auth/google/callback
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
